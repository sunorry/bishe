extends layout

block content

  form(class="form-horizontal", role="form", method="post")
    .form-group
      label(class="col-sm-2 control-label", for="reg-username") 用户名：
      .col-sm-6
        input(type="text", name="reg-name", class="form-control", id="reg-username", placeholder="username")
    .form-group
      label(class="col-sm-2 control-label", for="reg-password") 密码：
      .col-sm-6
        input(type="password", name="reg-password", class="form-control", id="reg-password", placeholder="password")
    .form-group
      label(class="col-sm-2 control-label", for="password-repeat") 确认密码：
      .col-sm-6
        input(type="password", name="reg-password-repeat", class="form-control", id="password-repeat", placeholder="password-repeat")
    .form-group
      label(class="col-sm-2 control-label", for="reg-email") 邮箱：
      .col-sm-6
        input(type="email", name="reg-email", class="form-control", id="reg-email", placeholder="email")
    .form-group
      div(class="col-sm-offset-2 col-sm-10")
        button(type="submit", class="btn btn-default") 注册

